page {
    /* 因为工具栏的绝对定位会遮住一部分内容这些增加内边距 */
    padding-bottom: 90rpx;
}

.detail_swiper swiper {
    height: 60vh;
    text-align: center;
}

.detail_swiper .pic {
    width: 80%;
}

.goods_price {
    margin-left: 30rpx;
    color: red;
    font-size: 40rpx;
    font-weight: 700;
}

.goods_box {
    display: flex;
    padding: 10rpx;
    border-top: 5rpx solid #dedede;
    border-bottom: 5rpx solid #dedede;
}

.goods_name {
    flex: 5;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods_collece {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 2rpx solid black;
}

.icon-shoucang1 {
    color: orange;
}

.goods_info_title {
    padding: 20rpx;
    font-size: 40rpx;
    font-weight: 700;
    color: red;
}

.goods_info_content {
    border-top: 5rpx solid #dedede;
}

.btm_tool {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    border-top: 2px solid #ccc;
}

.tool_item {
    flex: 1;
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10rpx 0;
    font-size: 24rpx;
}

button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.btm_tool .tool_item:nth-child(4) {
    flex: 1.5;
    background-color: rgb(245, 175, 23);
    color: #fff;
    margin-top: -2rpx;
    font-size: 30rpx;
}

.btm_tool .tool_item:nth-child(5) {
    flex: 1.5;
    background-color: rgb(253, 56, 56);
    color: #fff;
    margin-top: -2rpx;
    font-size: 30rpx;
}