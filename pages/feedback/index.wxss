.question_wrap {
    background-color: #ccc;
    padding: 30rpx;
    height: 100vh;
}

.questions {
    padding: 10rpx;
    font-size: 34rpx;
}

.ques_all {
    overflow: hidden;
    padding-top: 10rpx;
}

.ques_all .ques_item {
    float: left;
    padding: 10rpx;
    background-color: #fff;
    width: 30%;
    text-align: center;
    margin-bottom: 20rpx;
}

.ques_all .ques_item:nth-child(1),
.ques_all .ques_item:nth-child(2) {
    margin-right: 5%;
}

.suggest {
    margin: 30rpx 0;
    background-color: #fff;
}

.suggest .textarea {
    width: 100%;
    height: 350rpx;
    padding: 10rpx;
}

.fb_tool {
    display: flex;
    flex-wrap: wrap;
}

.fb_tool .fb_btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
    background-color: #ccc;
    font-size: 50rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    color: rgb(170, 167, 167);
    margin: 20rpx;
}

.form_btn_wrap {
    position: relative;
    width: 100%;
    height: 100rpx;
}

.form_btn_wrap .form_btn {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 80rpx;
    border-radius: 10rpx;
    background-color: #069e91;
}